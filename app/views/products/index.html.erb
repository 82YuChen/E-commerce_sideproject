<h1>商品列表</h1>

<%= link_to "新增商品", new_product_path %>

<table>
  <tr>
    <td>商品名稱</td>
    <td>編輯商品資訊</td>
    <td>刪除商品</td>
    <td>商品名稱</td>
  </tr>
  <% @products.each do |product| %>
  <tr>
    <td><%= link_to product.name, product_path(product) %></td>
    <td><%= link_to "編輯", edit_product_path(product) %></td>
    <td><%= link_to "刪除", product_path(product), method: "delete", data: {confirm: "確定要刪除商品嗎？" } %></td>
  </tr>
  <% end %>
</table>

<%= link_to "首頁", root_path %>